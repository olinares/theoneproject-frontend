<h2>Enjoy the following collection of YouTube videos</h2>

<form {{action 'search' on='submit'}}>
  <div class="ui massive fluid icon input">
    {{input value=searchTerm placeholder="Search for your favorite videos..."}}
    <i class="search icon" type="submit"></i>
  </div>
</form>

{{#each video in videos}}
  <div class="ui very relaxed list">
    <div class="item">
      <img {{bind-attr src=video.url}}>
      <div class="content">
        <a class="ui header" {{bind-attr href=video.videoId}}>{{video.title}}</a>
        <i {{action "favorite" video}} {{bind-attr class=":heart :icon video.favorited:selected"}}></i>
        <div class="description">
          {{video.description}}
        </div>
      </div>
    </div>
  </div>
{{/each}}

{{outlet}}
